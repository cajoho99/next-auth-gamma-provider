
{
  "compilerOptions": {
    "target": "es2015",                         
    "module": "esnext",                    
    "lib": [
      "dom",
      "es2015",
      "es2015.collection"],                             
    "declaration": true,                   
    "declarationMap": true,                
    "sourceMap": true,                     
    "outDir": "lib",                       
    "strict": false,                          
    "moduleResolution": "node",           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,  
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
